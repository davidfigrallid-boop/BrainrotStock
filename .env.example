# ═══════════════════════════════════════════════════════════
# DISCORD BOT CONFIGURATION
# ═══════════════════════════════════════════════════════════

# Token du bot Discord (obtenir sur https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_token_here

# ID de l'application Discord
CLIENT_ID=your_client_id_here

# ID du serveur Discord (Guild ID)
GUILD_ID=your_guild_id_here

# ═══════════════════════════════════════════════════════════
# DATABASE CONFIGURATION (OPTIONNEL)
# ═══════════════════════════════════════════════════════════

# Option 1: URL MySQL complète (Railway)
# MYSQL_PUBLIC_URL=mysql://user:password@host:port/database

# Option 2: Variables Railway TCP Proxy (Railway)
# RAILWAY_TCP_PROXY_DOMAIN=viaduct.proxy.rlwy.net
# RAILWAY_TCP_PROXY_PORT=12345
# MYSQL_ROOT_PASSWORD=your_password
# MYSQL_DATABASE=railway

# Option 3: Variables individuelles (.env local)
# MYSQLHOST=localhost
# MYSQLPORT=3306
# MYSQLUSER=root
# MYSQLPASSWORD=your_password
# MYSQLDATABASE=brainrots

# ═══════════════════════════════════════════════════════════
# API SERVER CONFIGURATION
# ═══════════════════════════════════════════════════════════

# Port du serveur API (défaut: 3001)
API_PORT=3001

# ═══════════════════════════════════════════════════════════
# PANEL WEB CONFIGURATION
# ═══════════════════════════════════════════════════════════

# Port du panel web (défaut: 3000)
PORT=3000

# ═══════════════════════════════════════════════════════════
# LOGGING CONFIGURATION
# ═══════════════════════════════════════════════════════════

# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# Activer les logs dans un fichier
LOG_FILE=false
